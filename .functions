#!/usr/bin/env bash

# Create a new directory and enter it
function mkd() {
	mkdir -p "$@" && cd "$_";
}

# Change working directory to the top-most Finder window location
function cdf() { # short for `cdfinder`
	cd "$(osascript -e 'tell app "Finder" to POSIX path of (insertion location as alias)')";
}

# Create a .tar.gz archive, using `zopfli`, `pigz` or `gzip` for compression
function targz() {
	local tmpFile="${@%/}.tar";
	tar -cvf "${tmpFile}" --exclude=".DS_Store" "${@}" || return 1;

	size=$(
		stat -f"%z" "${tmpFile}" 2> /dev/null; # macOS `stat`
		stat -c"%s" "${tmpFile}" 2> /dev/null;  # GNU `stat`
	);

	local cmd="";
	if (( size < 52428800 )) && hash zopfli 2> /dev/null; then
		# the .tar file is smaller than 50 MB and Zopfli is available; use it
		cmd="zopfli";
	else
		if hash pigz 2> /dev/null; then
			cmd="pigz";
		else
			cmd="gzip";
		fi;
	fi;

	echo "Compressing .tar ($((size / 1000)) kB) using \`${cmd}\`…";
	"${cmd}" -v "${tmpFile}" || return 1;
	[ -f "${tmpFile}" ] && rm "${tmpFile}";

	zippedSize=$(
		stat -f"%z" "${tmpFile}.gz" 2> /dev/null; # macOS `stat`
		stat -c"%s" "${tmpFile}.gz" 2> /dev/null; # GNU `stat`
	);

	echo "${tmpFile}.gz ($((zippedSize / 1000)) kB) created successfully.";
}

# Determine size of a file or total size of a directory
function fs() {
	if du -b /dev/null > /dev/null 2>&1; then
		local arg=-sbh;
	else
		local arg=-sh;
	fi
	if [[ -n "$@" ]]; then
		du $arg -- "$@";
	else
		du $arg .[^.]* ./*;
	fi;
}

# Use Git’s colored diff when available
hash git &>/dev/null;
if [ $? -eq 0 ]; then
	function diff() {
		git diff --no-index --color-words "$@";
	}
fi;

# Create a data URL from a file
function dataurl() {
	local mimeType=$(file -b --mime-type "$1");
	if [[ $mimeType == text/* ]]; then
		mimeType="${mimeType};charset=utf-8";
	fi
	echo "data:${mimeType};base64,$(openssl base64 -in "$1" | tr -d '\n')";
}

# Start an HTTP server from a directory, optionally specifying the port
function server() {
	local port="${1:-8000}";
	sleep 1 && open "http://localhost:${port}/" &
	# Set the default Content-Type to `text/plain` instead of `application/octet-stream`
	# And serve everything as UTF-8 (although not technically correct, this doesn’t break anything for binary files)
	python -c $'import SimpleHTTPServer;\nmap = SimpleHTTPServer.SimpleHTTPRequestHandler.extensions_map;\nmap[""] = "text/plain";\nfor key, value in map.items():\n\tmap[key] = value + ";charset=UTF-8";\nSimpleHTTPServer.test();' "$port";
}

# Start a PHP server from a directory, optionally specifying the port
# (Requires PHP 5.4.0+.)
function phpserver() {
	local port="${1:-4000}";
	local ip=$(ipconfig getifaddr en1);
	sleep 1 && open "http://${ip}:${port}/" &
	php -S "${ip}:${port}";
}

# Compare original and gzipped file size
function gz() {
	local origsize=$(wc -c < "$1");
	local gzipsize=$(gzip -c "$1" | wc -c);
	local ratio=$(echo "$gzipsize * 100 / $origsize" | bc -l);
	printf "orig: %d bytes\n" "$origsize";
	printf "gzip: %d bytes (%2.2f%%)\n" "$gzipsize" "$ratio";
}

# Run `dig` and display the most useful info
function digga() {
	dig +nocmd "$1" any +multiline +noall +answer;
}

# Show all the names (CNs and SANs) listed in the SSL certificate
# for a given domain
function getcertnames() {
	if [ -z "${1}" ]; then
		echo "ERROR: No domain specified.";
		return 1;
	fi;

	local domain="${1}";
	echo "Testing ${domain}…";
	echo ""; # newline

	local tmp=$(echo -e "GET / HTTP/1.0\nEOT" \
		| openssl s_client -connect "${domain}:443" -servername "${domain}" 2>&1);

	if [[ "${tmp}" = *"-----BEGIN CERTIFICATE-----"* ]]; then
		local certText=$(echo "${tmp}" \
			| openssl x509 -text -certopt "no_aux, no_header, no_issuer, no_pubkey, \
			no_serial, no_sigdump, no_signame, no_validity, no_version");
		echo "Common Name:";
		echo ""; # newline
		echo "${certText}" | grep "Subject:" | sed -e "s/^.*CN=//" | sed -e "s/\/emailAddress=.*//";
		echo ""; # newline
		echo "Subject Alternative Name(s):";
		echo ""; # newline
		echo "${certText}" | grep -A 1 "Subject Alternative Name:" \
			| sed -e "2s/DNS://g" -e "s/ //g" | tr "," "\n" | tail -n +2;
		return 0;
	else
		echo "ERROR: Certificate not found.";
		return 1;
	fi;
}

# Normalize `open` across Linux, macOS, and Windows.
# This is needed to make the `o` function (see below) cross-platform.
if [ ! $(uname -s) = 'Darwin' ]; then
	if grep -q Microsoft /proc/version; then
		# Ubuntu on Windows using the Linux subsystem
		alias open='explorer.exe';
	else
		alias open='xdg-open';
	fi
fi

# `o` with no arguments opens the current directory, otherwise opens the given
# location
function o() {
	if [ $# -eq 0 ]; then
		open .;
	else
		open "$@";
	fi;
}

# tre — handy tree wrapper
#
# Examples:
#   tre                    # full tree (with colors in pager), ignores clutter
#   tre -L 1 -d            # folders only, depth = 1
#   tre -L 2               # files + folders, depth = 2
#   tre --prune            # hide dirs that end up empty after filtering
#   tre -L 1 -d --prune    # folders only, depth = 1, pruned
#   tre -o structure.txt   # write plain output to file (no color)
#   tre src -L 2           # limit to "src" directory
#
# Flags passed through to `tree`:
#   -L <n>   max depth
#   -d       directories only
#   --prune  hide empty dirs after -I filtering
#   -o <f>   (tre-only) save to file (disables color)
#
# Ignore pattern (built-in):
#   .git|node_modules|bower_components|coverage|.turbo|dist|playwright-report|test-results|.next
function tre() {
    local outfile=""
    local args=()
    local tre_ignore='.git|node_modules|bower_components|coverage|.turbo|dist|playwright-report|test-results|.next'

    # Help text
    local help_text=$(cat <<'EOF'
tre — handy tree wrapper

Examples:
  tre                    # full tree (with colors in pager), ignores clutter
  tre -L 1 -d            # folders only, depth = 1
  tre -L 2               # files + folders, depth = 2
  tre --prune            # hide dirs that end up empty after filtering
  tre -L 1 -d --prune    # folders only, depth = 1, pruned
  tre -o structure.txt   # write plain output to file (no color)
  tre src -L 2           # limit to "src" directory

Flags passed through to `tree`:
  -L <n>   max depth
  -d       directories only
  --prune  hide empty dirs after -I filtering
  -o <f>   (tre-only) save to file (disables color)

Ignore pattern (built-in):
  .git|node_modules|bower_components|coverage|.turbo|dist|playwright-report|test-results|.next
EOF
)

    # Check for help flag
    if [[ "$1" == "--help" || "$1" == "-h" ]]; then
        echo "$help_text"
        return 0
    fi

    # Parse args: look for -o <filename>
    while [[ $# -gt 0 ]]; do
        case "$1" in
            -o)
                shift
                outfile="$1"
                ;;
            *)
                args+=("$1")
                ;;
        esac
        shift
    done

    if [[ -n "$outfile" ]]; then
        # No -C: disable color when writing to file
        tree -a -I "$tre_ignore" --dirsfirst "${args[@]}" > "$outfile"
        echo "Output saved to $outfile"
    else
        # Use color when outputting to terminal
        tree -aC -I "$tre_ignore" --dirsfirst "${args[@]}" | less -FRNX
    fi
}

# Detect WSL environment
function is_wsl() {
    # Help text
    local help_text=$(cat <<'EOF'
is_wsl — Detect if the current environment is Windows Subsystem for Linux (WSL).

Usage:
  is_wsl            # returns success (0) if running in WSL, else failure (1)
  is_wsl --help     # show this help message
  is_wsl -h         # show this help message

Example:
  if is_wsl; then
      echo "Running on WSL"
  else
      echo "Not running on WSL"
  fi
EOF
)

    # Check for help flag
    if [[ "$1" == "--help" || "$1" == "-h" ]]; then
        echo "$help_text"
        return 0
    fi

    grep -qEi "(Microsoft|WSL)" /proc/version &>/dev/null
}

# A simple remote IP checker with multiple backends
ip() {
  # Help text
  local help_text=$(cat <<'EOF'
ip — Fetch your public IP address using different backends.

Usage:
  ip [backend]
  ip --help
  ip -h

Backends:
  a | ipinfo     Use https://ipinfo.io/json (default, shows location info)
  b | ifconfig   Use https://ifconfig.me
  c | icanhazip  Use https://icanhazip.com

Examples:
  ip             # default (ipinfo)
  ip a           # ipinfo backend
  ip b           # ifconfig backend
  ip c           # icanhazip backend
EOF
)

  # Check for help flag
  if [[ "$1" == "--help" || "$1" == "-h" ]]; then
      echo "$help_text"
      return 0
  fi

  case "$1" in
    ""|default|ipinfo|a)
      json=$(curl -4s https://ipinfo.io/json)
      ip=$(echo "$json" | jq -r '.ip')
      city=$(echo "$json" | jq -r '.city')
      region=$(echo "$json" | jq -r '.region')
      country=$(echo "$json" | jq -r '.country')
      echo "IP: $ip ($city, $region, $country)"
      ;;
    ifconfig|ifconfig.me|b)
      ip=$(curl -4s ifconfig.me)
      echo "IP: ${ip:-unavailable}"
      ;;
    icanhazip|c)
      ip=$(curl -4s https://icanhazip.com)
      echo "IP: ${ip:-unavailable}"
      ;;
    *)
      echo "Unknown option. Use: ip [a|b|c|ipinfo|ifconfig|icanhazip]"
      ;;
  esac
}

# count: Count files in a Git repo while respecting .gitignore.
#
# Examples:
#   count                       # count all files in repo
#   count packages/app          # count files in a folder
#   count . '*.ts' '*.tsx'      # count TypeScript files in repo root
#   count packages/lib '*.tsx'  # count only .tsx files in a folder
count() {
  # Help text
  local help_text=$(cat <<'EOF'
count — Count files in a Git repository (respects .gitignore).

Usage:
  count [dir] [patterns...]
  count --help
  count -h

Examples:
  count                       # count all files in repo
  count packages/app          # count files in a folder
  count . '*.ts' '*.tsx'      # count TypeScript files in repo root
  count packages/lib '*.tsx'  # count only .tsx files in a folder
EOF
)

  # Check for help flag
  if [[ "$1" == "--help" || "$1" == "-h" ]]; then
      echo "$help_text"
      return 0
  fi

  local dir="${1:-.}"
  shift || :
  local tracked=$(git -C "$dir" ls-files -s -- "$@" | awk '$1 != 160000' | wc -l | tr -d ' ')
  local others=$(git -C "$dir" ls-files --others --exclude-standard -- "$@" | wc -l | tr -d ' ')
  echo $((tracked + others))
}

# chat_chunks — Split big text into ChatGPT-friendly parts with headers.
#
# Usage:
#   chat_chunks <file> [--max-chars N] [--out DIR | --tmp] [--prefix TEXT] [--mode ack|final] [--print]
#   <cmd> | chat_chunks --stdin [--max-chars N] [--out DIR | --tmp] [--prefix TEXT] [--mode ack|final] [--print]
#
# Options:
#   --stdin            Read input from stdin instead of a file
#   --max-chars N      Max bytes per chunk (default: 80000)
#   --out DIR          Write chunks to a directory (default: ./chunks-YYYYmmdd-HHMMSS)
#   --tmp              Write chunks under /tmp/chat-chunks/run-YYYYmmdd-HHMMSS and print full paths (yek-style)
#   --prefix TEXT      Header prefix (default: 'This is PART X of Y.')
#   --mode ack|final   ack   => do not analyze, reply with acknowledgement (default)
#                     final => last chunk signals 'ALL PARTS SENT'
#   --print            Print chunks to stdout instead of writing files
#
# Notes:
# - Uses `split -C` (fast, native) and respects line boundaries (won't split mid-line).
# - Limit is bytes (not tokens). If you paste huge parts or lots of code, reduce --max-chars for safety.
# - When using --tmp, printed paths are clickable in most terminals (similar to yek output).
chat_chunks() {
  local help_text
  help_text=$(cat <<'EOF'
chat_chunks — Split big text into ChatGPT-friendly parts with headers.

Usage:
  chat_chunks <file> [--max-chars N] [--out DIR | --tmp] [--prefix TEXT] [--mode ack|final] [--print]
  <cmd> | chat_chunks --stdin [--max-chars N] [--out DIR | --tmp] [--prefix TEXT] [--mode ack|final] [--print]
  chat_chunks --help

Options:
  --stdin            Read input from stdin instead of a file
  --max-chars N      Max bytes per chunk (default: 80000)
  --out DIR          Output directory (default: ./chunks-YYYYmmdd-HHMMSS)
  --tmp              Write chunks under /tmp/chat-chunks/run-YYYYmmdd-HHMMSS and print full paths (yek-style)
  --prefix TEXT      Header prefix text (default: 'This is PART X of Y.')
  --mode ack|final   ack => 'Reply only: OK, ready for next part.' (default)
                    final => last chunk includes: 'ALL PARTS SENT. Now process the full content.'
  --print            Print chunks to stdout instead of writing files
  -h, --help         Show help

Examples:
  chat_chunks big.txt
  yek . | chat_chunks --stdin --tmp
  yek . | chat_chunks --stdin --tmp --max-chars 120000
  yek . | chat_chunks --stdin --print | less -FRNX
EOF
)

  local from_stdin=0
  local max_chars=80000
  local out_dir=""
  local use_tmp=0
  local prefix=""
  local mode="ack"
  local print_only=0
  local input_file=""

  if [[ "${1:-}" == "--help" || "${1:-}" == "-h" ]]; then
    echo "$help_text"
    return 0
  fi

  while [[ $# -gt 0 ]]; do
    case "$1" in
      --stdin) from_stdin=1; shift ;;
      --max-chars) shift; max_chars="${1:-}"; shift ;;
      --out) shift; out_dir="${1:-}"; shift ;;
      --tmp) use_tmp=1; shift ;;
      --prefix) shift; prefix="${1:-}"; shift ;;
      --mode) shift; mode="${1:-ack}"; shift ;;
      --print) print_only=1; shift ;;
      -*) echo "Unknown option: $1"; echo "Use: chat_chunks --help"; return 1 ;;
      *)
        if [[ -z "$input_file" ]]; then input_file="$1"; shift
        else echo "Unexpected extra argument: $1"; return 1
        fi
        ;;
    esac
  done

  if [[ $from_stdin -eq 0 && -z "$input_file" ]]; then
    echo "ERROR: Provide a file path or use --stdin"
    return 1
  fi

  if ! [[ "$max_chars" =~ ^[0-9]+$ ]] || [[ "$max_chars" -lt 1000 ]]; then
    echo "ERROR: --max-chars must be an integer >= 1000"
    return 1
  fi

  [[ -n "$prefix" ]] || prefix="This is PART %d of %d."

  local tmpbase="${TMPDIR:-/tmp}"
  local base_dir="$tmpbase/chat-chunks"
  mkdir -p "$base_dir"

  # Keep only last 20 runs (optional cleanup; adjust or remove if you want)
  ls -dt "$base_dir"/run-* 2>/dev/null | tail -n +21 | xargs -r rm -rf 2>/dev/null || true

  # Stage input to a temp file (fast + stream-friendly)
  local staged
  staged="$(mktemp "$tmpbase/chat-chunks.input.XXXXXX")"
  trap 'rm -f "$staged"' RETURN

  if [[ $from_stdin -eq 1 ]]; then
    tr -d '\r' > "$staged"
  else
    [[ -f "$input_file" ]] || { echo "ERROR: File not found: $input_file"; return 1; }
    tr -d '\r' < "$input_file" > "$staged"
  fi

  if [[ ! -s "$staged" ]]; then
    echo "ERROR: Input is empty"
    return 1
  fi

  # Choose output directory
  if [[ $print_only -eq 0 ]]; then
    if [[ $use_tmp -eq 1 ]]; then
      out_dir="$base_dir/run-$(date +%Y%m%d-%H%M%S)"
      mkdir -p "$out_dir"
    else
      [[ -n "$out_dir" ]] || out_dir="./chunks-$(date +%Y%m%d-%H%M%S)"
      mkdir -p "$out_dir"
    fi
  else
    # For --print, still chunk into a run dir, then cat them; remove at end
    out_dir="$base_dir/run-$(date +%Y%m%d-%H%M%S)"
    mkdir -p "$out_dir"
  fi

  # Split fast in native code.
  # -C N: max bytes, but don't split mid-line
  # -d: numeric suffix, -a 3: 000..999, --additional-suffix: .txt
  split -d -a 3 --additional-suffix=.txt -C "$max_chars" "$staged" "$out_dir/part-"

  # Count parts
  local parts
  parts=$(ls "$out_dir"/part-*.txt 2>/dev/null | wc -l | tr -d ' ')
  if [[ "$parts" -eq 0 ]]; then
    echo "ERROR: split produced no output"
    return 1
  fi

  # Prepend headers
  local i=1
  local file
  for file in "$out_dir"/part-*.txt; do
    local header
    printf -v header "$prefix" "$i" "$parts"

    if [[ "$mode" == "final" && "$i" -eq "$parts" ]]; then
      header="$header"$'\n'"ALL PARTS SENT. Now process the full content."
    else
      header="$header"$'\n'"Do not analyze or summarize yet."$'\n'"Reply only with: OK, ready for next part."
    fi

    local tmpfile
    tmpfile="$(mktemp "$tmpbase/chat-chunks.part.XXXXXX")"
    {
      echo "$header"
      echo
      cat "$file"
    } > "$tmpfile"
    mv "$tmpfile" "$file"

    i=$(( i + 1 ))
  done

  # Output
  if [[ $print_only -eq 1 ]]; then
    for file in "$out_dir"/part-*.txt; do
      cat "$file"
      echo
      echo "-----"
      echo
    done
    rm -rf "$out_dir"
    return 0
  fi

  # Print full paths (clickable)
  for file in "$out_dir"/part-*.txt; do
    echo "$file"
  done
}

# ych — yek wrapper that forwards ALL args to yek, then chunks the output.
# Behaves like: yek "$@" | chat_chunks --stdin --tmp
ych() {
  if [[ $# -eq 0 ]]; then
    set -- .
  fi

  # If the user is asking for yek help/version/etc, don't pipe.
  # This avoids broken-pipe noise and preserves yek's exact behavior/output.
  case "${1:-}" in
    -h|--help|help|--version|-V|version)
      yek "$@"
      return $?
      ;;
  esac

  yek "$@" | chat_chunks --stdin --tmp
}

# pr-diff — Fetch PR diff to /tmp and write a filtered diff excluding review-noise files (private-safe via gh)
#
# Usage:
#   pr-diff <pr-number> [--full]
#   pr-diff <owner>/<repo> <pr-number> [--full]
#   pr-diff <pr-url> [--full]
#
# Config:
#   PR_DIFF_EXCLUDE="space separated patterns"   # overrides defaults
pr-diff() {
  local input="${1:-}"
  local second="${2:-}"
  local third="${3:-}"
  local mode=""
  local pr_arg=""

  # Files / patterns to exclude from the diff (review noise)
  # Override via PR_DIFF_EXCLUDE (space-separated)
  local excludes
  excludes="${PR_DIFF_EXCLUDE:-pnpm-lock.yaml package-lock.json yarn.lock bun.lockb}"

  if [[ -z "$input" || "$input" == "--help" || "$input" == "-h" ]]; then
    cat <<'EOF'
pr-diff — Fetch PR diff to /tmp and write a filtered diff excluding review-noise files (private-safe via gh)

Usage:
  pr-diff <pr-number> [--full]
  pr-diff <owner>/<repo> <pr-number> [--full]
  pr-diff <pr-url> [--full]

Outputs:
  - Filtered diff: /tmp/pr-diff-XXXXXX.diff      (primary)
  - Raw diff:      /tmp/pr-diff-XXXXXX.raw.diff  (reference)

Config:
  PR_DIFF_EXCLUDE="pnpm-lock.yaml yarn.lock ..."  # space-separated patterns (* supported)
EOF
    return 0
  fi

  if ! command -v gh >/dev/null 2>&1; then
    echo "ERROR: gh is required. Install GitHub CLI and run: gh auth login"
    return 1
  fi

  # Resolve PR argument and optional mode
  if [[ "$input" =~ ^https?://github\.com/.*/pull/[0-9]+/?$ ]]; then
    pr_arg="${input%/}"
    mode="${second:-}"
  elif [[ "$input" =~ ^[^/]+/[^/]+$ && "$second" =~ ^[0-9]+$ ]]; then
    pr_arg="https://github.com/${input}/pull/${second}"
    mode="${third:-}"
  elif [[ "$input" =~ ^[0-9]+$ ]]; then
    pr_arg="$input"
    mode="${second:-}"
  else
    echo "ERROR: Invalid input. Use: pr-diff --help"
    return 1
  fi

  local raw filtered
  raw="$(mktemp "${TMPDIR:-/tmp}/pr-diff-XXXXXX.raw.diff")" || return 1
  filtered="${raw%.raw.diff}.diff"

  echo "[1/3] Fetching PR diff via gh..."
  if ! gh pr diff "$pr_arg" --patch > "$raw"; then
    echo "ERROR: Failed to fetch PR diff via gh. Check: gh auth status"
    rm -f "$raw"
    return 1
  fi

  echo "[2/3] Filtering excluded files..."
  awk -v excludes="$excludes" '
    BEGIN {
      skip = 0
      n = split(excludes, ex, " ")
    }
    {
      sub(/\r$/, "", $0)  # handle CRLF
    }
    /^diff --git a\// {
      file = $0
      sub(/^diff --git a\//, "", file)
      sub(/ b\/.*/, "", file)

      skip = 0
      for (i = 1; i <= n; i++) {
        pattern = ex[i]
        gsub(/\./, "\\.", pattern)
        gsub(/\*/, ".*", pattern)
        if (file ~ "^" pattern "$") {
          skip = 1
          next
        }
      }
    }
    skip == 0 { print }
  ' "$raw" > "$filtered"

  echo "[3/3] Done."
  echo
    if [[ -t 1 ]]; then
      GREEN='\033[1;32m'
      DIM='\033[2m'
      RESET='\033[0m'
    else
      GREEN='' DIM='' RESET=''
    fi
  echo -e "${GREEN}Filtered diff:${RESET} $filtered"
  echo -e "${DIM}Raw diff:${RESET}      $raw"
  echo


  # Show stats from the filtered file (matches what you will review/apply)
  git apply --stat "$filtered"

  if [[ "$mode" == "--full" ]]; then
    echo
    echo "Tip: view filtered diff:"
    echo "  less -FRNX \"$filtered\""
  fi
}