#!/usr/bin/env bash

# Create a new directory and enter it
function mkd() {
	mkdir -p "$@" && cd "$_";
}

# Change working directory to the top-most Finder window location
function cdf() { # short for `cdfinder`
	cd "$(osascript -e 'tell app "Finder" to POSIX path of (insertion location as alias)')";
}

# Create a .tar.gz archive, using `zopfli`, `pigz` or `gzip` for compression
function targz() {
	local tmpFile="${@%/}.tar";
	tar -cvf "${tmpFile}" --exclude=".DS_Store" "${@}" || return 1;

	size=$(
		stat -f"%z" "${tmpFile}" 2> /dev/null; # macOS `stat`
		stat -c"%s" "${tmpFile}" 2> /dev/null;  # GNU `stat`
	);

	local cmd="";
	if (( size < 52428800 )) && hash zopfli 2> /dev/null; then
		# the .tar file is smaller than 50 MB and Zopfli is available; use it
		cmd="zopfli";
	else
		if hash pigz 2> /dev/null; then
			cmd="pigz";
		else
			cmd="gzip";
		fi;
	fi;

	echo "Compressing .tar ($((size / 1000)) kB) using \`${cmd}\`…";
	"${cmd}" -v "${tmpFile}" || return 1;
	[ -f "${tmpFile}" ] && rm "${tmpFile}";

	zippedSize=$(
		stat -f"%z" "${tmpFile}.gz" 2> /dev/null; # macOS `stat`
		stat -c"%s" "${tmpFile}.gz" 2> /dev/null; # GNU `stat`
	);

	echo "${tmpFile}.gz ($((zippedSize / 1000)) kB) created successfully.";
}

# Determine size of a file or total size of a directory
function fs() {
	if du -b /dev/null > /dev/null 2>&1; then
		local arg=-sbh;
	else
		local arg=-sh;
	fi
	if [[ -n "$@" ]]; then
		du $arg -- "$@";
	else
		du $arg .[^.]* ./*;
	fi;
}

# Use Git’s colored diff when available
hash git &>/dev/null;
if [ $? -eq 0 ]; then
	function diff() {
		git diff --no-index --color-words "$@";
	}
fi;

# Create a data URL from a file
function dataurl() {
	local mimeType=$(file -b --mime-type "$1");
	if [[ $mimeType == text/* ]]; then
		mimeType="${mimeType};charset=utf-8";
	fi
	echo "data:${mimeType};base64,$(openssl base64 -in "$1" | tr -d '\n')";
}

# Start an HTTP server from a directory, optionally specifying the port
function server() {
	local port="${1:-8000}";
	sleep 1 && open "http://localhost:${port}/" &
	# Set the default Content-Type to `text/plain` instead of `application/octet-stream`
	# And serve everything as UTF-8 (although not technically correct, this doesn’t break anything for binary files)
	python -c $'import SimpleHTTPServer;\nmap = SimpleHTTPServer.SimpleHTTPRequestHandler.extensions_map;\nmap[""] = "text/plain";\nfor key, value in map.items():\n\tmap[key] = value + ";charset=UTF-8";\nSimpleHTTPServer.test();' "$port";
}

# Start a PHP server from a directory, optionally specifying the port
# (Requires PHP 5.4.0+.)
function phpserver() {
	local port="${1:-4000}";
	local ip=$(ipconfig getifaddr en1);
	sleep 1 && open "http://${ip}:${port}/" &
	php -S "${ip}:${port}";
}

# Compare original and gzipped file size
function gz() {
	local origsize=$(wc -c < "$1");
	local gzipsize=$(gzip -c "$1" | wc -c);
	local ratio=$(echo "$gzipsize * 100 / $origsize" | bc -l);
	printf "orig: %d bytes\n" "$origsize";
	printf "gzip: %d bytes (%2.2f%%)\n" "$gzipsize" "$ratio";
}

# Run `dig` and display the most useful info
function digga() {
	dig +nocmd "$1" any +multiline +noall +answer;
}

# Show all the names (CNs and SANs) listed in the SSL certificate
# for a given domain
function getcertnames() {
	if [ -z "${1}" ]; then
		echo "ERROR: No domain specified.";
		return 1;
	fi;

	local domain="${1}";
	echo "Testing ${domain}…";
	echo ""; # newline

	local tmp=$(echo -e "GET / HTTP/1.0\nEOT" \
		| openssl s_client -connect "${domain}:443" -servername "${domain}" 2>&1);

	if [[ "${tmp}" = *"-----BEGIN CERTIFICATE-----"* ]]; then
		local certText=$(echo "${tmp}" \
			| openssl x509 -text -certopt "no_aux, no_header, no_issuer, no_pubkey, \
			no_serial, no_sigdump, no_signame, no_validity, no_version");
		echo "Common Name:";
		echo ""; # newline
		echo "${certText}" | grep "Subject:" | sed -e "s/^.*CN=//" | sed -e "s/\/emailAddress=.*//";
		echo ""; # newline
		echo "Subject Alternative Name(s):";
		echo ""; # newline
		echo "${certText}" | grep -A 1 "Subject Alternative Name:" \
			| sed -e "2s/DNS://g" -e "s/ //g" | tr "," "\n" | tail -n +2;
		return 0;
	else
		echo "ERROR: Certificate not found.";
		return 1;
	fi;
}

# Normalize `open` across Linux, macOS, and Windows.
# This is needed to make the `o` function (see below) cross-platform.
if [ ! $(uname -s) = 'Darwin' ]; then
	if grep -q Microsoft /proc/version; then
		# Ubuntu on Windows using the Linux subsystem
		alias open='explorer.exe';
	else
		alias open='xdg-open';
	fi
fi

# `o` with no arguments opens the current directory, otherwise opens the given
# location
function o() {
	if [ $# -eq 0 ]; then
		open .;
	else
		open "$@";
	fi;
}

# tre — handy tree wrapper
#
# Examples:
#   tre                    # full tree (with colors in pager), ignores clutter
#   tre -L 1 -d            # folders only, depth = 1
#   tre -L 2               # files + folders, depth = 2
#   tre --prune            # hide dirs that end up empty after filtering
#   tre -L 1 -d --prune    # folders only, depth = 1, pruned
#   tre -o structure.txt   # write plain output to file (no color)
#   tre src -L 2           # limit to "src" directory
#
# Flags passed through to `tree`:
#   -L <n>   max depth
#   -d       directories only
#   --prune  hide empty dirs after -I filtering
#   -o <f>   (tre-only) save to file (disables color)
#
# Ignore pattern (built-in):
#   .git|node_modules|bower_components|coverage|.turbo|dist|playwright-report|test-results|.next
function tre() {
    local outfile=""
    local args=()
    local tre_ignore='.git|node_modules|bower_components|coverage|.turbo|dist|playwright-report|test-results|.next'

    # Help text
    local help_text=$(cat <<'EOF'
tre — handy tree wrapper

Examples:
  tre                    # full tree (with colors in pager), ignores clutter
  tre -L 1 -d            # folders only, depth = 1
  tre -L 2               # files + folders, depth = 2
  tre --prune            # hide dirs that end up empty after filtering
  tre -L 1 -d --prune    # folders only, depth = 1, pruned
  tre -o structure.txt   # write plain output to file (no color)
  tre src -L 2           # limit to "src" directory

Flags passed through to `tree`:
  -L <n>   max depth
  -d       directories only
  --prune  hide empty dirs after -I filtering
  -o <f>   (tre-only) save to file (disables color)

Ignore pattern (built-in):
  .git|node_modules|bower_components|coverage|.turbo|dist|playwright-report|test-results|.next
EOF
)

    # Check for help flag
    if [[ "$1" == "--help" || "$1" == "-h" ]]; then
        echo "$help_text"
        return 0
    fi

    # Parse args: look for -o <filename>
    while [[ $# -gt 0 ]]; do
        case "$1" in
            -o)
                shift
                outfile="$1"
                ;;
            *)
                args+=("$1")
                ;;
        esac
        shift
    done

    if [[ -n "$outfile" ]]; then
        # No -C: disable color when writing to file
        tree -a -I "$tre_ignore" --dirsfirst "${args[@]}" > "$outfile"
        echo "Output saved to $outfile"
    else
        # Use color when outputting to terminal
        tree -aC -I "$tre_ignore" --dirsfirst "${args[@]}" | less -FRNX
    fi
}

# Detect WSL environment
function is_wsl() {
    # Help text
    local help_text=$(cat <<'EOF'
is_wsl — Detect if the current environment is Windows Subsystem for Linux (WSL).

Usage:
  is_wsl            # returns success (0) if running in WSL, else failure (1)
  is_wsl --help     # show this help message
  is_wsl -h         # show this help message

Example:
  if is_wsl; then
      echo "Running on WSL"
  else
      echo "Not running on WSL"
  fi
EOF
)

    # Check for help flag
    if [[ "$1" == "--help" || "$1" == "-h" ]]; then
        echo "$help_text"
        return 0
    fi

    grep -qEi "(Microsoft|WSL)" /proc/version &>/dev/null
}

# A simple remote IP checker with multiple backends
ip() {
  # Help text
  local help_text=$(cat <<'EOF'
ip — Fetch your public IP address using different backends.

Usage:
  ip [backend]
  ip --help
  ip -h

Backends:
  a | ipinfo     Use https://ipinfo.io/json (default, shows location info)
  b | ifconfig   Use https://ifconfig.me
  c | icanhazip  Use https://icanhazip.com

Examples:
  ip             # default (ipinfo)
  ip a           # ipinfo backend
  ip b           # ifconfig backend
  ip c           # icanhazip backend
EOF
)

  # Check for help flag
  if [[ "$1" == "--help" || "$1" == "-h" ]]; then
      echo "$help_text"
      return 0
  fi

  case "$1" in
    ""|default|ipinfo|a)
      json=$(curl -4s https://ipinfo.io/json)
      ip=$(echo "$json" | jq -r '.ip')
      city=$(echo "$json" | jq -r '.city')
      region=$(echo "$json" | jq -r '.region')
      country=$(echo "$json" | jq -r '.country')
      echo "IP: $ip ($city, $region, $country)"
      ;;
    ifconfig|ifconfig.me|b)
      ip=$(curl -4s ifconfig.me)
      echo "IP: ${ip:-unavailable}"
      ;;
    icanhazip|c)
      ip=$(curl -4s https://icanhazip.com)
      echo "IP: ${ip:-unavailable}"
      ;;
    *)
      echo "Unknown option. Use: ip [a|b|c|ipinfo|ifconfig|icanhazip]"
      ;;
  esac
}

# count: Count files in a Git repo while respecting .gitignore.
#
# Examples:
#   count                       # count all files in repo
#   count packages/app          # count files in a folder
#   count . '*.ts' '*.tsx'      # count TypeScript files in repo root
#   count packages/lib '*.tsx'  # count only .tsx files in a folder
count() {
  # Help text
  local help_text=$(cat <<'EOF'
count — Count files in a Git repository (respects .gitignore).

Usage:
  count [dir] [patterns...]
  count --help
  count -h

Examples:
  count                       # count all files in repo
  count packages/app          # count files in a folder
  count . '*.ts' '*.tsx'      # count TypeScript files in repo root
  count packages/lib '*.tsx'  # count only .tsx files in a folder
EOF
)

  # Check for help flag
  if [[ "$1" == "--help" || "$1" == "-h" ]]; then
      echo "$help_text"
      return 0
  fi

  local dir="${1:-.}"
  shift || :
  local tracked=$(git -C "$dir" ls-files -s -- "$@" | awk '$1 != 160000' | wc -l | tr -d ' ')
  local others=$(git -C "$dir" ls-files --others --exclude-standard -- "$@" | wc -l | tr -d ' ')
  echo $((tracked + others))
}